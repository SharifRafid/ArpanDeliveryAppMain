<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayoutProductsMain"
    android:background="@color/bg_color"
    tools:context=".ui.home.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.MaterialCardView.Cut.2"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/coverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/loading_image_glide"
                    android:adjustViewBounds="true"
                    android:scaleType="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:id="@+id/shopNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="bottom"
                        android:text=""
                        android:textColor="@color/text_color_product_pages"
                        android:textSize="17sp"
                        android:paddingStart="4dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/locationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color_product_pages2"
                        android:textSize="12sp"
                        android:drawablePadding="3dp"
                        android:padding="2dp"
                        android:drawableTint="@color/text_color_product_pages2"
                        android:drawableLeft="@drawable/ic_location"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutProducts"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="35dp"
            app:tabIndicator="@drawable/tab_indicator"
            app:tabIndicatorColor="@color/tab_text_color_selected"
            app:tabIndicatorFullWidth="false"
            app:tabMode="scrollable"
            android:paddingBottom="-1dp"
            android:background="@color/tab_indicator_bg_color_selector"
            app:tabBackground="@color/tab_indicator_bg_color_selector"
            app:tabRippleColor="#86A0B1"
            app:tabSelectedTextColor="@color/tab_text_color_selected"
            app:tabTextAppearance="@style/tab_text"
            app:tabTextColor="@color/tab_text_color"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerMainProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>