<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_first_page"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.auth.PhoneAuthActivity">
    <LinearLayout
        android:id="@+id/sendCodeLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="visible"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_logo_with_tag"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/mainLinearView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_color_deep_card"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="18dp"
                android:gravity="center">
                <EditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:gravity="center"
                    android:padding="12dp"
                    android:hint="@string/enter_phone_number"
                    android:maxLength="11"
                    android:backgroundTint="@color/edt_text_color_phone_auth_page_white"
                    android:textColor="@color/edt_text_color_phone_auth_page_white"
                    android:textColorHint="@color/edt_text_color_phone_auth_page_white"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/buttonSendOtpFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_code"
                    android:textSize="14sp"
                    android:textColor="@color/btn_text_color_phone_auth_page"
                    android:backgroundTint="@color/btn_bg_color_phone_auth_page"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:onClick="onSendCodeButtonClick"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ProgressBar
            android:id="@+id/progressSendOtpFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:indeterminateTint="@color/blue_normal"
            android:visibility="gone"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_color_deep_card"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:id="@+id/enterCodeLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:visibility="gone"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <com.mukesh.OtpView
                    android:id="@+id/otp_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:gravity="center"
                    android:itemBackground="@color/edt_text_color_phone_auth_page"
                    android:textColor="@android:color/white"
                    app:OtpItemCount="6"
                    android:visibility="visible"
                    app:OtpLineColor="@color/edt_text_color_phone_auth_page_white"
                    app:OtpViewType="line"/>
                <Button
                    android:id="@+id/buttonEnterOtpFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/btn_bg_color_phone_auth_page"
                    android:text="পেস্ট করুন"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:onClick="onSubmitCodeButtonClick"
                    android:layout_marginTop="8dp"/>
                <ProgressBar
                    android:id="@+id/progressEnterOtpFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/blue_normal"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/otpDidntReciveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/button_text_color"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:text="Didn't recieve the code? Please wait 0s before trying again..."/>

                <Button
                    android:id="@+id/buttonResendOtpFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/btn_bg_color_phone_auth_page"
                    android:text="      পুনরায় কোড পাঠান      "
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>